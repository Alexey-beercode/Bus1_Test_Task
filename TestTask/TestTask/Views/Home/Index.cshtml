@model IEnumerable<Link>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid pt-5 align-middle">
     @{
         if (Model.Count()!=0)
         {
             <div class="row px-xl-5">
                 <div class="col-lg-8 table-responsive mb-5">
                     <table id="cartTable" class="table table-bordered text-center mb-0">
                         <thead class="bg-secondary text-dark">

                         <tr>
                             <th data-translate="product">URL</th>
                             <th data-translate="price">Короткий URL</th>
                             <th data-translate="count">Количетсво переходов на короткий URL</th>
                             <th data-translate="score">Дата создания</th>
                             <th data-translate="formDelete">Удалить</th>
                         </tr>
                         </thead>
                         <tbody class="align-middle">
                         @foreach (var link in Model)
                         {
                             <tr>
                                 <td>@link.LongUrl</td>
                                 <td><a href="@Url.Action("RedirectByShortUrl","Link",new {shortUrl=@link.ShortUrl})">@link.ShortUrl</a></td>
                                 <td>@link.Count</td>
                                 <td>@link.CreatedDate</td>
                                 <td>><a  class="btn btn-block btn-primary my-3 py-3" href="@Url.Action("DeleteLink","Link")">Удалить элемент</a></td>
                             </tr>
                         }
                         </tbody>
                     </table>
                 </div>
             </div>
         }
         else
         {
             <h3>Ничего не найдено </h3>
         }
     }
   <a id="applyFilterBtn" class="btn btn-block btn-primary my-3 py-3" href="@Url.Action("CreateLink","Link")">Добавить элемент</a>
</div>